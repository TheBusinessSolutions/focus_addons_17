<odoo>
    <record id="view_bulk_discount_approval_wizard" model="ir.ui.view">
        <field name="name">bulk.discount.approval.wizard.form</field>
        <field name="model">bulk.discount.approval.wizard</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <form string="Bulk Discount Approval">
                <group>
                    <field name="action"/>
                </group>
               <footer>
                <button name="apply_bulk_action" string="Apply" type="object"
                        class="btn btn-primary"
                        groups="zehntech_sale_discount_on_total_amount.group_discount_approval_manager"/>
                <button string="Cancel" special="cancel" class="btn btn-secondary"/>
            </footer>
            </form>
        </field>
    </record>
</odoo>
