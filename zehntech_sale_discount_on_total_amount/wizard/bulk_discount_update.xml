<odoo>
    <record id="view_bulk_discount_update_wizard" model="ir.ui.view">
        <field name="name">bulk.discount.update.wizard.form</field>
        <field name="model">bulk.discount.update.wizard</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <form string="Apply Bulk Discount">
                <group>
                    <field name="discount_type"/>
                    <field name="discount_rate"/>
                </group>
            <footer>
                <button name="apply_bulk_discount" string="Apply" type="object"
                        class="btn btn-primary"/>
                <button string="Cancel" special="cancel" class="btn btn-secondary"/>
            </footer>

            </form>
        </field>
    </record>
</odoo>
