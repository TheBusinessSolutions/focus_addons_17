<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_invoice_document_inherit_discount"
        inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='total']//table[contains(@class, 'table')]" position="inside">
            <tr>
                <td>
                    <strong>Discount Type:</strong>
                </td>
                <td class="text-end">
                    <t
                        t-esc="o.discount_type and {'percent': 'Percentage', 'amount': 'Fixed Amount'}[o.discount_type] or 'N/A'" />
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Discount Rate:</strong>
                </td>
                <td class="text-end">
                    <t t-esc="o.discount_rate" />
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Discount Amount:</strong>
                </td>
                <td class="text-end">
                    <span t-esc="o.discount_amount"
                        t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" />
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <hr style="border-top: 1px solid #000;" />
                </td>
            </tr>
            <tr>
                <td colspan="2" class="text-end pt-2">
                    <span style="font-size: 20px; font-weight: bold;">Total Amount:</span>
                    <span style="font-size: 20px; font-weight: bold;">
                        <t t-esc="o.amount_total"
                            t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" />
                    </span>
                </td>
            </tr>
            <tr>
                <td colspan="2" class="text-end">
                    <strong>Total amount in words:</strong>
                    <span t-esc="o.currency_id.amount_to_text(o.amount_total)" />
                </td>
            </tr>
        </xpath>
    </template>
</odoo>